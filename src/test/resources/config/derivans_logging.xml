<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] (%C{1}:%L) %m%n</Pattern>
			</PatternLayout>
		</Console>
		<File name="derivansLog" fileName="${sys:user.home}/derivans-test.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] (%C{1}:%L) %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<Logger name="de.ulb.digital.derivans" level="trace" additivity="false">
			<AppenderRef ref="LogToConsole" level="trace" />
			<AppenderRef ref="derivansLog" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="LogToConsole" />
		</Root>
	</Loggers>

</Configuration>
